<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VibeShelf.App.Views.InfoPage"
             Title="Info">
    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Fill">
            <Label Text="Info" TextColor="White"  VerticalTextAlignment="Center"  FontSize="20" />
        </HorizontalStackLayout>
    </Shell.TitleView>

    <ScrollView>
        <StackLayout Padding="20">
            <!-- Image at the top -->
            <Image Source="spal.png" Aspect="AspectFit" HeightRequest="200" HorizontalOptions="Center" />

            <!-- Welcome Message -->
            <Label Text="What does ReadBox do?" FontSize="30" FontAttributes="Bold" Margin="10" HorizontalOptions="Center" Padding="10" />

            <!-- Description about the app -->
            <Label Text="This app is created for a university project. It allows you to manage your favorite books, search for new ones, and save them to your personal library." 
               FontSize="16" 
               HorizontalOptions="Center" 
               Padding="10" />

            <!-- Extra Info -->
            <Label Text="You can search for books, add them to your favorites, and enjoy reading!" 
               FontSize="16" 
               HorizontalOptions="Center" 
               Padding="10" />

            <Label Text="Created By ilia" TextColor="Bisque" Padding="10" Margin="0, 30, 0, 0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>